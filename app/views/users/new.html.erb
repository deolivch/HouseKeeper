  <%= form_for @user do |f| %>
              <% if @user.errors.any? %>
              <div id="error_explanation">
                          <div class="alert-error">
                                     O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
                          </div>
                          <ul>
                                     <% @user.errors.full_messages.each do |msg| %>
                                        <li><%= msg %></li>
                                     <% end %>
                          </ul>
              </div>
  <% end %>
            <div class="criarlogin">
              <p><h1>Criando Login</h1></p>
                <table>
                 <tr>
                  <td><%= f.label :name %></td>
                  <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                  <td><%= f.label :email %></td>
                  <td><%= f.email_field :email %></td>
                </tr>
                <tr>
                  <td><%= f.label :tipoCadastro %></td>
                  <td><%= f.text_field :tipoCadastro %></td>
                </tr>
                <tr>
                  <td><%= f.label :cpf %></td>
                  <td><%= f.number_field :cpf %></td>
                </tr>
                <tr>
                  <td><%= f.label :telefone %></td>
                  <td><%= f.text_field :telefone %></td>
                </tr>
                <tr>
                  <td><%= f.label :sexo %></td>
                  <td><%= f.text_field :sexo %></td>
                </tr>
                <tr>
                  <td><%= f.label :imagem %></td>
                  <td><%= f.text_field :imagem %></td>
                </tr>
                <tr>
                  <td><%= f.label :password %></td>
                  <td><%= f.password_field :password %></td>
                </tr>
                <tr>
                  <td><%= f.label :password_confirmation %></td>
                  <td><%= f.password_field :password_confirmation %></td>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                  <td><%= f.submit "Cadastrar"%></td>
                </tr>
              </table>
            </div>
  <% end %>